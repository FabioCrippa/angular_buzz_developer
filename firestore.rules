rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===============================================
    // üë§ COLE√á√ÉO DE USU√ÅRIOS
    // ===============================================
    match /users/{userId} {
      // Permitir leitura e escrita apenas para o pr√≥prio usu√°rio autenticado
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permitir cria√ß√£o de novo usu√°rio durante cadastro
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // ===============================================
    // üìä COLE√á√ÉO DE PROGRESSO
    // ===============================================
    match /progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ===============================================
    // ‚≠ê COLE√á√ÉO DE FAVORITOS
    // ===============================================
    match /favorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ===============================================
    // üí≥ COLE√á√ÉO DE ASSINATURAS
    // ===============================================
    match /subscriptions/{subscriptionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if false; // Apenas backend pode escrever
    }
  }
}
